doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title shr4pnel blog
        link(rel="preload" as="style" href="/onionring.css")
        link(rel="stylesheet" href="/onionring.css")
        link(rel="preload" as="style" href="/globals.css")
        link(rel="stylesheet" href="/globals.css")
    body 
        header 
            .container.title-container
                h1.logo shrapnelnet
        main
            .container
                h2.highlighted articles
                #articles
                    each post in posts
                        article
                            -const image = post.thumb === "default" ? "/anon.png" : post.thumb
                            -const date = new Date(post.date)
                            .card 
                                img(src=image alt="article image" height="80" width="80")
                                a(href=`/posts/${post.name}`)=post.title
                                p=date.toLocaleString().split(",")[0]
                img(src="/cutiecat.gif" alt="cute cats bouncing up and down animated")
                footer 
                    #socials
                        h2.highlighted socials
                        div 
                            // this is to pretend there's a little image here
                            div(style="width:42px")
                            a(href="/links") My webrings!
                        div
                            img(src="/github-mark.svg" alt="github logo" width="32px" height="32px")
                            a(href="https://github.com/shrapnelnet/" target="_blank") github/shrapnelnet
                        div
                            img(src="/mastodon.svg" alt="mastodon logo" width="32px" height="32px")
                            a(href="https://blobfox.coffee/@tyler" target="_blank") @tyler@blobfox.coffee
                        div
                            div(style="width:42px")
                            a(href="mailto:admin@shr4pnel.com") My email
                    #friends
                        h2.highlighted friends
                        .friend-container
                            a(href="/")
